# Database
MONGODB_URI=mongodb://localhost:27017/eventhive

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Server
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Payment Gateways
PAYMENT_GATEWAY=razorpay
# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret
# Stripe (fallback)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=EventHive <noreply@eventhive.com>

# WhatsApp
WHATSAPP_PROVIDER=whatsapp_cloud
# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
# Twilio WhatsApp (alternative)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# SMS (optional)
SMS_PROVIDER=twilio
TWILIO_SMS_NUMBER=+1234567890

# File Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Refund Policy (hours before event)
FULL_REFUND_HOURS=48
PARTIAL_REFUND_HOURS=24
PARTIAL_REFUND_PERCENTAGE=50

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# QR Code Security
QR_SECRET=your-qr-security-secret